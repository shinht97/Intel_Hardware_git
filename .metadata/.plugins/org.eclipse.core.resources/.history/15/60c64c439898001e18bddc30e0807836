#include "delay.h"

void my_Delay(int _interval, TIM_HandleTypeDef _htim) // make some usec delay, _interval : usec
{
	// htim5 is struct

	volatile int start = _htim.Instance->CNT;

//	while(1)
//	{
//		int cur = htim5.Instance->CNT;
//
//		if((cur - start) == _interval)
//		{
//			break;
//		}
//	}
//
//	return;

	while(1)
	{
		volatile int cur = _htim.Instance->CNT;

		if((cur - start) > _interval)
		{
			return;
		}
	} // 최적화
}
